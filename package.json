{
  "name": "my-account",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "lint": "cd ./react && yarn lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\"",
    "test": "cd ./react && yarn test",
    "verify": "yarn lint  && yarn test",
    "upgrade:all": "yarn upgrade && cd ./react && yarn upgrade && cd ../node && yarn upgrade && cd ../my-account-extension-example/react && yarn upgrade"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn verify"
    }
  },
  "lint-staged": {
    "*.{ts,js,tsx,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,graphql,gql}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/node": "^12.12.21",
    "@vtex/prettier-config": "^0.1.3",
    "eslint": "^6.8.0",
    "eslint-config-vtex": "^12.2.1",
    "eslint-config-vtex-react": "^6.2.1",
    "husky": "^4.2.0",
    "json-schema": "^0.4.0",
    "lint-staged": "^10.0.2",
    "prettier": "^2.2.0",
    "typescript": "^3.7.5"
  },
  "version": "1.11.1"
}
