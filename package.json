{
  "version": "1.7.1",
  "devDependencies": {
    "@types/exenv": "^1.2.0",
    "@vtex/intl-equalizer": "^2.0.1",
    "husky": "^1.3.1"
  },
  "scripts": {
    "lint:messages": "intl-equalizer"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cd ./react && yarn lint",
      "pre-push": "yarn lint:messages && cd ./react && yarn test && yarn lint"
    }
  },
  "intl-equalizer": {
    "referenceLocale": "en",
    "localeDirectory": "messages"
  }
}
